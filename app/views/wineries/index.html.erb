<div class="search-container">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>All Wineries</h1>
        <script type="text/javascript src="http://maps.google.com/maps/api/js"></script>



        <%= @wineries.each do |winery| %>
        <%= link_to winery_path(winery) do %>
          <h2><%= winery.name %></h2>
        <% end %>
        <!-- <p><%= winery.open_hours %></p> -->
        <p>Can I tour the winery? <%= winery.tours %></p>
        <%= link_to "More details", winery_path(winery) %>
        <%= link_to "Remove Winery", winery_path(winery), method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>">
</div>

