 <script type="text/javascript src="http://maps.google.com/maps/api/js"></script>
<div class="container">
  <h1>All Wineries</h1>
  <%= render "wineries/search" %>
  <div class="cards">
    <div class="row">
      <div class="col-md-12">
        <% @wineries.each do |winery| %>
        <%= render "wineries/textimage", winery:winery %>
        <% end %>
      </div>
    </div>
  </div>
  <%= will_paginate @wineries %>
</div>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>">
</div>

<div>
  <%= link_to "Create Winery", new_winery_path %>
</div>

