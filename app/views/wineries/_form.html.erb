<%= form_for @winery do |f| %>
  <p>
  <%= f.label :name, "Enter a name" %>
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :tours, "Are tours available? " %>
  <%= f.text_field :tours %>
  </p>
  <p>
  <%= f.label :address, "Address" %>
  <%= f.text_field :address %>
  </p>
  <p>
  <%= f.label :photo %>
  <%= f.file_field :photo_cache %>
  </p>
  <p>
  <%= f.label :open_hours, "Open at: " %>
  <%= f.text_field :open_hours %>
  </p>
  <p>
  <%= f.label :close_time, "Closed at: " %>
  <%= f.text_field :close_time %>
  </p>
  <p>
  <%= f.submit %>
  </p>
<% end %>
